<!-- COMPANY ADDRESS MODAL -->

<div class="modal fade profile-update-modal" id="companyAddressModal" tabindex="-1" role="dialog" aria-labelledby="companyAddressModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="form-group">
        <%= simple_form_for(profile) do |f| %>
          <div class="modal-body">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <%= cl_image_tag("https://res.cloudinary.com/jeudemains/image/upload/v1593191048/jeu-de-mains-fermer-bleu.svg", :width => 50, :height => 50, :crop => :fill, :alt => "jeu-de-mains-fermer", :title => "jeu-de-mains-fermer") %>
            </button>
            <p style='max-width:350px;'>Si votre entreprise a déménagé, pensez à modifier aussi l'adresse de vos données société dans l'onglet suivant "Données Société".</p>
            <div>
              <%= f.input :address, id: 'profile_address', label: false, placeholder: "Adresse", :input_html => { class: "mb-2"} %>
              <%= f.input :zip_code, id: 'profile_zip_code', label: false, placeholder: "Code postal", :input_html => { class: "mb-2"} %>
              <%= f.input :city, id: 'profile_city', label: false, placeholder: "Ville" %>
            </div>
            <%= f.submit class: 'button', value: "Valider", data: { disable_with: false } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

