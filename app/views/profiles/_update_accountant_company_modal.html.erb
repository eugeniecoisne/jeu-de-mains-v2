<!-- COMPANY ACCOUNTANT ADDRESS MODAL -->

<div class="modal fade profile-update-modal" id="companyAccountantAddressModal" tabindex="-1" role="dialog" aria-labelledby="companyAccountantAddressModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="form-group">
        <%= simple_form_for(profile) do |f| %>
          <div class="modal-body">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <%= cl_image_tag("https://res.cloudinary.com/jeudemains/image/upload/v1593191048/jeu-de-mains-fermer-bleu.svg", :width => 50, :height => 50, :crop => :fill, :alt => "jeu-de-mains-fermer", :title => "jeu-de-mains-fermer") %>
            </button>
            <p style='max-width:350px;'>Si votre entreprise a déménagé, pensez à modifier aussi l'adresse de votre fiche Partenaire dans l'onglet précédent "Fiche Partenaire".</p>
            <div>
              <%= f.input :accountant_address, id: 'profile_accountant_address', label: false, required: true, placeholder: "Adresse", :input_html => { class: "mb-2"} %>
              <%= f.input :accountant_zip_code, id: 'profile_accountant_zip_code', label: false, required: true, placeholder: "Code postal", :input_html => { class: "mb-2"} %>
              <%= f.input :accountant_city, id: 'profile_accountant_city', label: false, required: true, placeholder: "Ville" %>
            </div>
            <%= f.submit class: 'button', value: "Valider", data: { disable_with: false } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

