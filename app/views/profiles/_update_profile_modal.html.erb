<!-- PHONE NUMBER MODAL -->

<div class="modal fade profile-update-modal" id="phoneNumberModal" tabindex="-1" role="dialog" aria-labelledby="phoneNumberModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="form-group">
        <%= simple_form_for(profile) do |f| %>
          <div class="modal-body">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <%= cl_image_tag("https://res.cloudinary.com/jeudemains/image/upload/v1593191048/jeu-de-mains-fermer-bleu.svg", :width => 50, :height => 50, :crop => :fill, :alt => "jeu-de-mains-fermer", :title => "jeu-de-mains-fermer") %>
            </button>
            <% if profile.phone_number %>
              <%= f.input :phone_number, id: 'profile_phone_number', label: false, placeholder: profile.phone_number %>
            <% else %>
              <%= f.input :phone_number, id: 'profile_phone_number', label: false, placeholder: "NumÃ©ro de portable" %>
            <% end %>
            <%= f.submit class: 'button', value: "Valider", data: { disable_with: false } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

