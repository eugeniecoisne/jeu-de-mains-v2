<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <%= simple_form_for([@workshop, @animator]) do |f| %>
        <div class="form-group select required animator_user">
          <label class="select required" for="animator_user_id">Animateur</label>
          <select class="form-control select required" name="animator[user_id]" id="animator_user_id">
            <% if @animator.user.present? %>
              <option value="<%= @animator.user.id %>" selected><%= @animator.user.profile.company %> - <%= "#{@animator.user.profile.last_name} #{@animator.user.profile.first_name}" %></option>
              <option value="" disabled>----------</option>
            <% end %>
            <% @users.sort_by { |user| user.profile.company }.each do |user| %>
              <option value="<%= user.id %>"><%= user.profile.company %> - <%= "#{user.profile.last_name} #{user.profile.first_name}" %></option>
            <% end %>
          </select>
        </div>

        <%= f.submit 'Valider' %>

      <% end %>
    </div>
  </div>
</div>
