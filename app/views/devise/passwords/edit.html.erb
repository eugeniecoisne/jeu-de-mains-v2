<!-- EDIT PASSWORD -->

<div class="sign-container">

  <div class="sign-form">

    <h2 class="sign-title"><%= t(".change_your_password") %></h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password,
                    label: t(".new_password"),
                    required: true,
                    autofocus: true,
                    hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: t(".confirm_new_password"),
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t(".change_my_password") %>
      </div>
      <div class="sign-empty-div">
      </div>
    <% end %>

    <div class='sign-links'>
      <%= render "devise/shared/links" %>
    </div>

  </div>

  <div class="sign-picture">
    <%= cl_image_tag("https://res.cloudinary.com/jeudemains/image/upload/v1593629305/making-blue.svg", :width => 1000, :crop => :fill, :loading => "lazy") %>
  </div>

</div>
