<div class="sign-container">

  <div class="sign-form">

    <h2 class="sign-title">Donnez votre avis sur l'atelier <%= @booking.session.workshop.title %></h2>

    <%= simple_form_for([@booking, @review]) do |f| %>

      <div class="form-inputs">

        <%= f.input :rating, collection: (1..5).to_a, label: "Note sur l'atelier" %>
        <%= f.input :content, label: "Avis sur l'atelier" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Publier mon avis" %>
      </div>

    <% end %>
  </div>

  <div class="sign-picture">
    <%= cl_image_tag("https://res.cloudinary.com/eugeniedenis/image/upload/v1593629305/making-blue.svg", :width => 1000, :crop => :fill) %>
  </div>

</div>
