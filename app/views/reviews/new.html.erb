<% if @booking %>

  <div class="sign-container" id="new-review-sign-container">

    <div class="back-button" id="new-review-back-button">
      <%= link_to 'javascript:history.go(-1);' do %>
        <i class="fas fa-chevron-left"></i>
        <span>Retour</span>
      <% end %>
    </div>

    <div class="sign-form">

      <h2 class="sign-title" id="new-review-title">Donnez votre avis sur l'atelier <span><%= @booking.session.workshop.title %></span></h2>

      <%= simple_form_for([@booking, @review]) do |f| %>

        <div class="form-inputs" id="new-review-form-inputs">
          <p>
            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star mr-1"></i>Très bien /
            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star mr-1"></i>Bien /
            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star mr-1"></i>Moyen /
            <i class="fas fa-star"></i><i class="fas fa-star mr-1"></i>Mauvais /
            <i class="fas fa-star mr-1"></i> Très mauvais
           </p>
          <%= f.input :rating, required: true, collection: (1..5).to_a, label: false %>
          <%= f.input :content, required: true, label: false, placeholder: "Rédigez un commentaire sur l'atelier (ambiance, qualité de l'enseignement, fournitures, etc", input_html: { minlength: "20", rows: 8 } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Publier mon avis" %>
        </div>

      <% end %>
    </div>

    <div class="sign-picture">
      <%= cl_image_tag("https://res.cloudinary.com/jeudemains/image/upload/v1612889842/jeu-de-mains-do-it-yourself.svg", :width => 1000, :crop => :fill, :loading => "lazy", :alt => "jeu-de-mains-illustration", :title => "jeu-de-mains-illustration") %>
    </div>

  </div>

<% end %>
