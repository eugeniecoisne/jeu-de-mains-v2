<table border="1">
  <tr>
    <th>Date de session</th>
    <th>Heure de session</th>
    <th>Atelier</th>
    <th>Numero de reservation</th>
    <th>Nom</th>
    <th>Prenom</th>
    <th>Adresse</th>
    <th>Complement adresse</th>
    <th>Code postal</th>
    <th>Ville</th>
    <th>Telephone</th>
    <th>E-mail</th>
    <th>Date de r√©servation</th>
    <th>Quantites de kits</th>
    <th>Statut</th>
    <th>Lien de suivi</th>
  </tr>
  <% @bookings.each do |booking| %>
  <tr>
    <td><%= booking.session.start_date.strftime("%d/%m/%y") %></td>
    <td><%= booking.session.start_time %></td>
    <td><%= booking.session.workshop.title.parameterize(separator:' ').capitalize %></td>
    <td><%= booking.id %></td>
    <td><%= booking.user.last_name.present? ? booking.user.last_name.parameterize(separator:' ').capitalize : "-" %></td>
    <td><%= booking.user.first_name.present? ? booking.user.first_name.parameterize(separator:' ').capitalize : "-" %></td>
    <td><%= booking.address.present? ? booking.address.parameterize(separator:' ').capitalize : "-" %></td>
    <td><%= booking.address_complement.present? ? booking.address_complement.parameterize(separator:' ').capitalize : "-" %></td>
    <td><%= booking.zip_code.present? ? booking.zip_code : "-" %></td>
    <td><%= booking.city.present? ? booking.city.parameterize(separator:' ').capitalize : "-" %></td>
    <td><%= booking.phone_number.present? ? booking.phone_number : "-" %></td>
    <td><%= booking.user.email.present? ? booking.user.email : "-" %></td>
    <td><%= booking.created_at.strftime("%d/%m/%y") %></td>
    <td><%= booking.quantity %></td>
    <td><%= booking.kit_expedition_status.present? ? booking.kit_expedition_status.parameterize(separator:' ').capitalize : "-" %></td>
    <td><%= booking.kit_expedition_link.present? ? booking.kit_expedition_link : "-" %></td>
  </tr>
  <% end %>
</table>
