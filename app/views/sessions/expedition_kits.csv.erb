<%= ["Date de session", "Heure de session", "Atelier", "Numero de reservation", "Nom", "Prenom", "Adresse", "Complement adresse", "Code postal", "Ville", "Telephone", "E-mail", "Date de reservation", "Quantites de kits", "Statut", "Lien de suivi" ].to_csv({col_sep: ";"}) %>
<% @bookings.each do |booking| %>
  <% array = [] %>
  <% array << booking.session.start_date.strftime("%d/%m/%y") %>
  <% array << booking.session.start_time %>
  <% array << booking.session.workshop.title.parameterize(separator:' ').capitalize %>
  <% array << booking.id %>
  <% array << (booking.user.last_name.present? ? booking.user.last_name.parameterize(separator:' ').capitalize : "-") %>
  <% array << (booking.user.first_name.present? ? booking.user.first_name.parameterize(separator:' ').capitalize : "-") %>
  <% array << (booking.address.present? ? booking.address.parameterize(separator:' ').capitalize : "-") %>
  <% array << (booking.address_complement.present? ? booking.address_complement.parameterize(separator:' ').capitalize : "-") %>
  <% array << (booking.zip_code.present? ? booking.zip_code : "-") %>
  <% array << (booking.city.present? ? booking.city.parameterize(separator:' ').capitalize : "-") %>
  <% array << (booking.phone_number.present? ? booking.phone_number : "-") %>
  <% array << (booking.user.email.present? ? booking.user.email : "-") %>
  <% array << booking.created_at.strftime("%d/%m/%y") %>
  <% array << booking.quantity %>
  <% array << (booking.kit_expedition_status.present? ? booking.kit_expedition_status.parameterize(separator:' ').capitalize : "-") %>
  <% array << (booking.kit_expedition_link.present? ? booking.kit_expedition_link : "-") %>
  <%= array.to_csv({col_sep: ";"}) %>
<% end %>
